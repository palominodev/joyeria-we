---
export interface Props {
    title: string
    body: string
}

const {title,body} = Astro.props
---

<article>
    <h4>{title}</h4>
    <p>{body}</p>
</article>

<style>
    article {
        border: 1px solid black;
        width: 80%;
        padding: 1.2rem;
    }
    h4 {
        font-size: 2rem;
        text-align: center;
        margin-block-end: 0.8rem;
    }
    p {
        font-size: 1.6rem;
    }
</style>
