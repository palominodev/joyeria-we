---
export interface Props {
	title: string;
	body: string;
	href: string;
	img: string;
}

const { href, title, body,img } = Astro.props;
---

<article class="card">
	<div >
		<figure class="card__figure">
			<img class="card__img" src={img} alt={title}>
		</figure>
	</div>
	<a href={href}>
		<h2 class="card__title">
			{title}
			<span>&rarr;</span>
		</h2>
		<p class="card__text">
			{body}
		</p>
	</a>
</article>
<style>

	.card {
		border: 1px solid black;
		max-width: 450px;
		width: 80%;
		padding: 1.2rem
	}

	.card__figure {
		overflow: hidden;
		border: 1px solid black;
		border-radius: 1rem;
		height: 15rem;
		margin-block-end: 1.2rem;
	}

	.card__img {
		width: 100%;
		height: 100%;
		object-fit: cover;
	}

	.card__title {
		font-size: 2rem;
		margin-block-end: 0.8rem;
	}
	.card__text {
		font-size: 1.6rem;
		font-weight: normal;
		font-family: sans-serif;
	}

	@media only screen and (min-width: 600px) {
		.card {
			padding: 2rem;
		}
		.card__figure {
			margin-block-end: 2.4rem;
		}
		.card__title {
			font-size: 2.8rem;
		}
		.card__text {
			font-size: 2rem;
		}
	}
</style>
