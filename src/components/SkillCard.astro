---
export interface Props {
	title: string;
	body: string;
	href: string;
	img: string;
}

const { href, title, body,img } = Astro.props;
---

<article class="link-card">
	<div>
		<figure>
			<img width="200" src={img} alt={title}>
		</figure>
	</div>
	<a href={href}>
		<h2>
			{title}
			<span>&rarr;</span>
		</h2>
		<p>
			{body}
		</p>
	</a>
</article>
<style>
</style>
