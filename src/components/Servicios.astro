---
import ServicioCard from "./ServicioCard.astro";
const servicios = await Astro.glob('../servicios/*.md')
---

<section id="servicios">
    <h3>Servicios</h3>
    <section class="content-card">
        {
            servicios.map(({frontmatter}) => <ServicioCard body={frontmatter.body} title={frontmatter.title} />)
        }
    </section>
</section>

<style>
    h3 {
        font-size: 3rem;
        text-align: center;
        font-family: serif;
        text-decoration: underline;
    }
    .content-card {
        display: flex;
        flex-direction: column;
        gap: 1.2rem;
        align-items: center;
    }
</style>